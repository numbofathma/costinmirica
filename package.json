{
  "name": "costinmirica",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "next": "^14.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "resend": "^2.1.0"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx src --color",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|css|scss)\" --write",
    "check": "npm run lint:fix && npm run format && npm run lint && npm run type-check",
    "coupling-graph": "npx madge --extensions js,jsx,ts,tsx,css,md,mdx ./ --exclude '.next|tailwind.config.ts|prettierrc|eslintrc|postcss.config.js|next.config.js|next-env.d.ts|instrumentation.ts|e2e/|README.md|.storybook/' --image graph.svg",
    "postinstall": "husky install"
  },
  "git": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "eslint --ignore-path .gitignore --fix",
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "devDependencies": {
    "@types/node": "20.11.5",
    "@types/react": "18.2.46",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "postcss": "^8.4.32",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "sass": "^1.69.6",
    "tailwindcss": "^3.4.0",
    "typescript": "5.3.3"
  }
}
